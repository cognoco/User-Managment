  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "npm run test:jest && npm run test:vitest",
    "test:jest": "jest --testPathPattern='^.*\\/__tests__\\/.*\\.(test|spec)\\.[jt]sx?$'",
    "test:vitest": "vitest run 'project/src/**/*.{test,spec}.{ts,tsx}'",
    "test:watch": "npm run test:jest -- --watch",
    "test:coverage": "npm run test:jest -- --coverage && npm run test:vitest -- --coverage",
    "test:vitest:watch": "vitest watch",
    "test:vitest:coverage": "vitest run --coverage",
    "test:simple": "jest __tests__/simple.test.js",
    "test:components": "node scripts/run-tests.js --dir=components",
    "test:lib": "node scripts/run-tests.js --dir=lib",
    "test:middleware": "node scripts/run-tests.js --dir=middleware",
    "test:api": "node scripts/run-tests.js --dir=pages",
    "test:all": "node scripts/run-tests.js",
    "test:all:coverage": "node scripts/run-tests.js --coverage"
  },

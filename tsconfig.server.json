{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "target": "es2019",
    "isolatedModules": false,
    "noEmit": false
  },
  "include": [
    "pages/api/**/*.ts",
    "middleware/**/*.ts",
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "project/**/*"
  ]
} 